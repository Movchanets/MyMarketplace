{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
      
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtSettings": {
    "Issuer": "MyAPPServer",
    "Audience": "MyAPPClient",
    "AccessTokenSecret": "",
    "RefreshTokenSecret": "",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "SmtpSettings": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "Username": "",
    "Password": "",
    "From": "noreply@example.com",
    "EnableSsl": true,
    "FromName": "My App <noreply@example.com>",
    "TemplatePath": "API/EmailTemplates/reset-password.html"
  },

  "GoogleAuth": {
    "ClientId": "",
    "ClientSecret": ""
  },
  
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Turnstile": {
    "Secret": ""
  },
  "AllowedHosts": "*",
  "AllowedCorsOrigins" : "",

  "RateLimiting": {
    "Enabled": true,
    "PartitionByIp": true,
    "PermitLimit": 100,
    "WindowInSeconds": 60,
    "QueueLimit": 0,
    "QueueProcessingOrder": "OldestFirst",
    "RejectionStatusCode": 429
  },

  "Redis": {
    "Enabled": false,
    "ConnectionString": "localhost:6379",
    "InstanceName": "AppNet9:"
  },

  "Storage": {
    "Provider": "Local",

    "Local": {
      "FolderName": "uploads"
    },

    "R2": {
      "AccountId": "",
      "AccessKey": "",
      "SecretKey": "",
      "BucketName": "",
      "PublicUrl": ""
    },

    "S3": {
      "Region": "",
      "AccessKey": "",
      "SecretKey": "",
      "BucketName": "",
      "PublicUrl": ""
    },

    "Azure": {
      "AccountName": "movchanetsdotnetapp",
      "AccountKey": "your-account-key",
      "ContainerName": "images",
      "CdnUrl": ""
    },

    "MinIO": {
      "ServiceUrl": "",
      "AccessKey": "",
      "SecretKey": "",
      "BucketName": "",
      "PublicUrl": ""
    }
  }
}
